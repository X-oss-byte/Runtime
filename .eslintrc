{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files": ["**/*.ts"],
            "parser": "typescript-eslint-parser",
            "rules": {
                "no-undef": "off",
                "no-unused-vars": "off"
            }
        }
    ],
    "parser": "typescript-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["typescript"]
}
