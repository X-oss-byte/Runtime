{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "diagnostics": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "lib": ["dom", "scripthost", "es2015", "es2016", "es2017", "es2018"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "noEmitHelpers": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noResolve": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
